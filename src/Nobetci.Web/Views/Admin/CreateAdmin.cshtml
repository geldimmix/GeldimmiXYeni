@using Nobetci.Web.Data.Entities
@model AdminUserViewModel
@{
    ViewData["Title"] = "Yeni Admin Olu≈ütur";
}

<div class="admin-header">
    <h2>‚ûï Yeni Admin Olu≈ütur</h2>
    <div class="header-actions">
        <a href="/admin/admins" class="btn btn-secondary">‚Üê Geri</a>
    </div>
</div>

<div class="card" style="max-width: 600px;">
    <form method="post" action="/admin/admins/create">
        <div class="form-group">
            <label class="form-label">Kullanƒ±cƒ± Adƒ± <span style="color: red;">*</span></label>
            <input type="text" name="Username" class="form-control" 
                   value="@Model.Username" required maxlength="50" placeholder="admin_username">
            @if (ViewContext.ModelState["Username"]?.Errors.Any() == true)
            {
                <span style="color: red; font-size: 0.85rem;">@ViewContext.ModelState["Username"]!.Errors.First().ErrorMessage</span>
            }
        </div>
        
        <div class="form-group">
            <label class="form-label">≈ûifre <span style="color: red;">*</span></label>
            <input type="password" name="Password" class="form-control" 
                   required minlength="6" placeholder="En az 6 karakter">
            @if (ViewContext.ModelState["Password"]?.Errors.Any() == true)
            {
                <span style="color: red; font-size: 0.85rem;">@ViewContext.ModelState["Password"]!.Errors.First().ErrorMessage</span>
            }
        </div>
        
        <div class="form-group">
            <label class="form-label">ƒ∞sim</label>
            <input type="text" name="FullName" class="form-control" 
                   value="@Model.FullName" maxlength="100" placeholder="Ad Soyad">
        </div>
        
        <div class="form-group">
            <label class="form-label">Email</label>
            <input type="email" name="Email" class="form-control" 
                   value="@Model.Email" maxlength="100" placeholder="email@example.com">
        </div>
        
        <div class="form-group">
            <label class="form-label">Rol</label>
            <select name="Role" class="form-control">
                @{
                    var adminSelected = Model.Role == AdminRoles.Admin ? "selected" : "";
                    var superAdminSelected = Model.Role == AdminRoles.SuperAdmin ? "selected" : "";
                    var viewerSelected = Model.Role == AdminRoles.Viewer ? "selected" : "";
                }
                <option value="Admin" @adminSelected>Admin - Tam eri≈üim (admin y√∂netimi hari√ß)</option>
                <option value="SuperAdmin" @superAdminSelected>‚≠ê SuperAdmin - T√ºm yetkilere sahip</option>
                <option value="Viewer" @viewerSelected>Viewer - Sadece g√∂r√ºnt√ºleme</option>
            </select>
        </div>
        
        <div class="form-group">
            <label class="form-check" style="cursor: pointer;">
                <input type="checkbox" name="IsActive" value="true" @(Model.IsActive ? "checked" : "")>
                <span>Aktif</span>
            </label>
        </div>
        
        <div style="display: flex; gap: 12px; margin-top: 24px;">
            <button type="submit" class="btn btn-primary">üíæ Olu≈ütur</button>
            <a href="/admin/admins" class="btn btn-secondary">ƒ∞ptal</a>
        </div>
    </form>
</div>

