        <div class="sidebar-footer">
            <a href="/admin/logout" class="nav-item">
                <span class="nav-icon">üö™</span>
                <span>√áƒ±kƒ±≈ü</span>
            </a>
        </div>
    </aside>
    
    <main class="main">
        <header class="main-header">
            <h1>
                <span class="icon">@(ViewData["Icon"] ?? "üìã")</span>
                @ViewData["Title"]
            </h1>
            <span class="header-meta">@DateTime.Now.ToString("dd MMM yyyy, dddd", new System.Globalization.CultureInfo("tr-TR"))</span>
        </header>
        
        <div class="main-content">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <span>‚úì</span>
