@section Styles {
<style>
    /* Hero Section */
    .hero-section {
        position: relative;
        overflow: hidden;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
        min-height: 80vh;
        display: flex;
        align-items: center;
    }
    
    .hero-bg {
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        opacity: 0.05;
        transform: skewX(-12deg) translateX(20%);
    }
    
    /* Dashboard Preview */
    .hero-visual {
        position: relative;
        padding: 20px;
    }
    
    .dashboard-preview {
        background: white;
        border-radius: 16px;
        box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15);
        overflow: hidden;
        transform: perspective(1000px) rotateY(-5deg) rotateX(2deg);
        transition: transform 0.5s ease;
    }
    
    .dashboard-preview:hover {
        transform: perspective(1000px) rotateY(0deg) rotateX(0deg);
    }
    
    .preview-header {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        padding: 12px 16px;
        display: flex;
        align-items: center;
        gap: 12px;
    }
    
    .preview-dots span {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 6px;
    }
    
    .preview-dots span:nth-child(1) { background: #ef4444; }
    .preview-dots span:nth-child(2) { background: #f59e0b; }
    .preview-dots span:nth-child(3) { background: #22c55e; }
    
    .preview-title {
        color: white;
        font-size: 0.85rem;
        font-weight: 500;
    }
    
    .preview-body {
        padding: 16px;
    }
    
    .mini-calendar {
        font-size: 0.75rem;
    }
    
    .mini-row {
        display: grid;
        grid-template-columns: 80px repeat(7, 1fr);
        gap: 4px;
        padding: 6px 0;
        border-bottom: 1px solid #f1f5f9;
    }
    
    .mini-row.header {
        font-weight: 600;
        color: #64748b;
        background: #f8fafc;
        border-radius: 8px;
        padding: 8px;
    }
    
    .mini-row .name {
        font-weight: 500;
        color: #1e293b;
    }
    
    .mini-row .weekend {
        color: #ef4444;
    }
    
    .shift {
        padding: 2px 4px;
        border-radius: 4px;
        font-size: 0.65rem;
        text-align: center;
        font-weight: 500;
    }
    
    .shift.morning {
        background: #dbeafe;
        color: #1d4ed8;
    }
    
    .shift.night {
        background: #ede9fe;
        color: #7c3aed;
    }
    
    /* Floating Stats */
    .floating-stat {
        position: absolute;
        background: white;
        padding: 12px 16px;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.12);
        display: flex;
        align-items: center;
        gap: 12px;
        animation: float 3s ease-in-out infinite;
    }
    
    .stat-1 {
        top: 10%;
        right: 0;
        animation-delay: 0s;
    }
    
    .stat-2 {
        bottom: 20%;
        right: 10%;
        animation-delay: 1.5s;
    }
    
    @@keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    
    .stat-icon {
        font-size: 1.5rem;
    }
    
    .stat-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: #1e293b;
    }
    
    .stat-label {
        font-size: 0.7rem;
        color: #64748b;
    }
    
    /* Stats Bar */
    .stats-bar {
        background: linear-gradient(135deg, #1e293b 0%, #0f172a 100%);
    }
    
    /* Feature Cards */
    .features-section {
        background: white;
    }
    
    .feature-card {
        background: #f8fafc;
        border-radius: 16px;
        padding: 24px;
        position: relative;
        transition: all 0.3s ease;
        border: 1px solid transparent;
    }
    
    .feature-card:hover {
        background: white;
        box-shadow: 0 20px 40px rgba(0,0,0,0.08);
        border-color: #e2e8f0;
        transform: translateY(-4px);
    }
    
    .feature-card.featured {
        background: linear-gradient(135deg, #eff6ff 0%, #f5f3ff 100%);
        border: 2px solid #6366f1;
    }
    
    .feature-badge {
        position: absolute;
        top: -10px;
        right: 20px;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        color: white;
        font-size: 0.7rem;
        padding: 4px 12px;
        border-radius: 20px;
        font-weight: 600;
    }
    
    .feature-icon-wrapper {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
    }
    
    .feature-icon-wrapper.fair { background: linear-gradient(135deg, #f59e0b 0%, #f97316 100%); }
