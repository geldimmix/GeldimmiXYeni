@{
    var isTurkish = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "tr";
    ViewData["Title"] = isTurkish ? "Online Nöbet & Puantaj Sistemi" : "Online Shift & Timesheet System";
    ViewData["MetaDescription"] = isTurkish 
        ? "Hemşire nöbet programı, vardiya planı, otomatik puantaj ve fazla mesai hesaplama. Adil dağıtım algoritması ile saniyeler içinde nöbet listesi oluşturun."
        : "Nurse shift scheduling, duty roster planning, automatic timesheet and overtime calculation. Create fair shift schedules in seconds.";
}

@section Styles {
<style>
    :root {
        --bg-dark: #0a0a0a;
        --bg-light: #fafafa;
        --text: #171717;
        --text-muted: #737373;
        --border: #e5e5e5;
        --accent: #c94a4a;
    }
    
    /* ═══════════════════════════════════════════════════════════
       HERO SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .hero {
        min-height: 90vh;
        display: flex;
        align-items: center;
        background: var(--bg-dark);
        position: relative;
        overflow: hidden;
    }
    
    .hero::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -25%;
        width: 80%;
        height: 200%;
        background: radial-gradient(circle, rgba(201, 74, 74, 0.08) 0%, transparent 60%);
        pointer-events: none;
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
        padding: 80px 0;
    }
    
    .hero-badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        background: rgba(255, 255, 255, 0.06);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 8px 16px;
        border-radius: 100px;
        font-size: 0.85rem;
        color: #a3a3a3;
        margin-bottom: 32px;
    }
    
    .hero-badge-dot {
        width: 8px;
        height: 8px;
        background: #22c55e;
        border-radius: 50%;
        animation: pulse 2s infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    .hero-title {
        font-family: 'Instrument Serif', Georgia, serif;
        font-size: clamp(3rem, 8vw, 5.5rem);
        font-weight: 400;
        font-style: italic;
        color: white;
        line-height: 1.05;
        letter-spacing: -0.03em;
        margin-bottom: 32px;
    }
    
    .hero-title span {
        color: var(--accent);
    }
    
    .hero-desc {
        font-size: 1.2rem;
        color: #a3a3a3;
        line-height: 1.7;
        max-width: 520px;
        margin-bottom: 48px;
    }
    
    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        margin-bottom: 64px;
    }
    
    .btn-hero-primary {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 18px 32px;
        background: white;
        color: var(--bg-dark);
        font-weight: 600;
        font-size: 1rem;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .btn-hero-primary:hover {
        background: var(--accent);
        color: white;
        transform: translateY(-2px);
    }
    
    .btn-hero-secondary {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 18px 32px;
        background: transparent;
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        font-weight: 500;
        font-size: 1rem;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .btn-hero-secondary:hover {
        border-color: rgba(255, 255, 255, 0.4);
        background: rgba(255, 255, 255, 0.05);
        color: white;
    }
    
    .hero-features {
        display: flex;
        flex-wrap: wrap;
        gap: 32px;
    }
    
    .hero-feature {
        display: flex;
        align-items: center;
        gap: 10px;
        color: #737373;
        font-size: 0.9rem;
    }
    
    .hero-feature-icon {
        width: 20px;
        height: 20px;
        background: rgba(34, 197, 94, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.7rem;
        color: #22c55e;
    }
    
    /* Hero Visual */
    .hero-visual {
        position: relative;
    }
    
    .hero-mockup {
        background: #1a1a1a;
        border: 1px solid #2a2a2a;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 40px 80px rgba(0, 0, 0, 0.5);
    }
    
    .mockup-header {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 14px 18px;
        background: #141414;
        border-bottom: 1px solid #2a2a2a;
    }
    
    .mockup-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
    }
    
    .mockup-dot.red { background: #ff5f57; }
    .mockup-dot.yellow { background: #febc2e; }
    .mockup-dot.green { background: #28c840; }
    
    .mockup-title {
        margin-left: 12px;
        color: #737373;
        font-size: 0.85rem;
    }
    
    .mockup-body {
        padding: 24px;
    }
    
    .mockup-calendar {
        display: grid;
        grid-template-columns: 100px repeat(7, 1fr);
        gap: 2px;
        font-size: 0.75rem;
    }
    
    .cal-header {
        background: #1f1f1f;
        padding: 10px 8px;
        text-align: center;
        color: #737373;
        font-weight: 600;
    }
    
    .cal-header.name-col {
        text-align: left;
    }
    
    .cal-header.weekend {
        color: var(--accent);
    }
    
    .cal-row {
        display: contents;
    }
    
    .cal-cell {
        background: #1a1a1a;
        padding: 10px 8px;
        text-align: center;
        border: 1px solid #222;
    }
    
    .cal-cell.name {
        text-align: left;
        color: #d4d4d4;
        font-weight: 500;
    }
    
    .cal-shift {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
    }
    
    .cal-shift.morning {
        background: rgba(59, 130, 246, 0.2);
        color: #60a5fa;
    }
    
    .cal-shift.night {
        background: rgba(139, 92, 246, 0.2);
        color: #a78bfa;
    }
    
    .cal-shift.long {
        background: rgba(34, 197, 94, 0.2);
        color: #4ade80;
    }
    
    /* Floating elements */
    .hero-float {
        position: absolute;
        background: #1a1a1a;
        border: 1px solid #2a2a2a;
        border-radius: 12px;
        padding: 16px 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: floatAnim 4s ease-in-out infinite;
    }
    
    .hero-float-1 {
        top: -20px;
        right: -30px;
    }
    
    .hero-float-2 {
        bottom: 40px;
        left: -40px;
        animation-delay: 2s;
    }
    
    @@keyframes floatAnim {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-12px); }
    }
    
    .float-icon {
        width: 40px;
        height: 40px;
        background: rgba(201, 74, 74, 0.15);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
    
    .float-value {
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
    }
    
    .float-label {
        font-size: 0.75rem;
        color: #737373;
    }
    
    /* ═══════════════════════════════════════════════════════════
       FEATURES SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .features {
        padding: 120px 0;
        background: var(--bg-light);
    }
    
    .section-label {
        display: inline-block;
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1.5px;
        color: var(--text-muted);
        margin-bottom: 16px;
    }
    
    .section-title {
        font-family: 'Instrument Serif', Georgia, serif;
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 400;
        font-style: italic;
        color: var(--text);
        line-height: 1.15;
        letter-spacing: -0.02em;
        margin-bottom: 24px;
    }
    
    .section-desc {
        font-size: 1.1rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 480px;
    }
    
    .feature-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 24px;
        margin-top: 64px;
    }
    
    .feature-card {
        background: white;
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 32px;
        transition: all 0.3s ease;
    }
    
    .feature-card:hover {
        border-color: var(--accent);
        transform: translateY(-4px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.06);
    }
    
    .feature-icon {
        width: 48px;
        height: 48px;
        background: var(--bg-light);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        margin-bottom: 20px;
    }
    
    .feature-card:hover .feature-icon {
        background: rgba(201, 74, 74, 0.1);
    }
    
    .feature-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 10px;
    }
    
    .feature-text {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }
    
    /* ═══════════════════════════════════════════════════════════
       HOW IT WORKS
       ═══════════════════════════════════════════════════════════ */
    
    .how-it-works {
        padding: 120px 0;
        background: white;
    }
    
    .steps-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 48px;
        margin-top: 64px;
        position: relative;
    }
    
    .steps-grid::before {
        content: '';
        position: absolute;
        top: 48px;
        left: 20%;
        right: 20%;
        height: 1px;
        background: var(--border);
    }
    
    .step {
        text-align: center;
        position: relative;
    }
    
    .step-number {
        width: 96px;
        height: 96px;
        background: var(--bg-light);
        border: 2px solid var(--border);
        border-radius: 24px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin-bottom: 28px;
        position: relative;
        transition: all 0.3s ease;
    }
    
    .step:hover .step-number {
        border-color: var(--accent);
        background: white;
    }
    
    .step-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        width: 28px;
        height: 28px;
        background: var(--text);
        color: white;
        border-radius: 50%;
        font-size: 0.8rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .step-title {
        font-size: 1.15rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 10px;
    }
    
    .step-text {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }
    
    /* ═══════════════════════════════════════════════════════════
       TIMESHEET PREVIEW
       ═══════════════════════════════════════════════════════════ */
    
    .timesheet-section {
        padding: 120px 0;
        background: var(--bg-light);
    }
    
    .timesheet-preview {
        background: white;
        border: 1px solid var(--border);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.06);
    }
    
    .ts-header {
        background: var(--text);
        color: white;
        padding: 20px 28px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .ts-header h4 {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
    }
    
    .ts-body {
        padding: 24px;
    }
    
    .ts-table {
        width: 100%;
        font-size: 0.9rem;
    }
    
    .ts-table th {
        text-align: left;
        padding: 12px 16px;
        background: var(--bg-light);
        color: var(--text-muted);
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .ts-table td {
        padding: 16px;
        border-bottom: 1px solid var(--border);
    }
    
    .ts-table tr:last-child td {
        border-bottom: none;
    }
    
    .ts-name {
        font-weight: 600;
        color: var(--text);
    }
    
    .ts-night { color: #7c3aed; font-weight: 600; }
    .ts-weekend { color: #f59e0b; font-weight: 600; }
    .ts-overtime { color: var(--accent); font-weight: 600; }
    .ts-total { font-weight: 700; color: var(--text); }
    
    .ts-footer {
        padding: 20px 28px;
        background: var(--bg-light);
        display: flex;
        justify-content: flex-end;
    }
    
    .btn-export {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 20px;
        background: #16a34a;
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-export:hover {
        background: #15803d;
    }
    
    .ts-features {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }
    
    .ts-feature-item {
        display: flex;
        align-items: flex-start;
        gap: 16px;
    }
    
    .ts-feature-icon {
        width: 48px;
        height: 48px;
        background: var(--bg-light);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        flex-shrink: 0;
    }
    
    .ts-feature-content h5 {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 4px;
    }
    
    .ts-feature-content p {
        font-size: 0.9rem;
        color: var(--text-muted);
        margin: 0;
    }
    
    /* ═══════════════════════════════════════════════════════════
       CTA SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .cta {
        padding: 120px 0;
        background: var(--bg-dark);
        text-align: center;
    }
    
    .cta-title {
        font-family: 'Instrument Serif', Georgia, serif;
        font-size: clamp(2rem, 5vw, 3.5rem);
        font-weight: 400;
        font-style: italic;
        color: white;
        line-height: 1.15;
        letter-spacing: -0.02em;
        margin-bottom: 24px;
    }
    
    .cta-desc {
        font-size: 1.1rem;
        color: #a3a3a3;
        margin-bottom: 40px;
    }
    
    .btn-cta {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 20px 40px;
        background: white;
        color: var(--bg-dark);
        font-weight: 600;
        font-size: 1.1rem;
        border-radius: 14px;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .btn-cta:hover {
        background: var(--accent);
        color: white;
        transform: translateY(-2px);
    }
    
    /* ═══════════════════════════════════════════════════════════
       RESPONSIVE
       ═══════════════════════════════════════════════════════════ */
    
    @@media (max-width: 991px) {
        .hero-visual {
            display: none;
        }
        
        .feature-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .steps-grid {
            grid-template-columns: 1fr;
            gap: 40px;
        }
        
        .steps-grid::before {
            display: none;
        }
    }
    
    @@media (max-width: 767px) {
        .feature-grid {
            grid-template-columns: 1fr;
        }
        
        .hero-actions {
            flex-direction: column;
        }
        
        .btn-hero-primary,
        .btn-hero-secondary {
            width: 100%;
            justify-content: center;
        }
    }
</style>
}

