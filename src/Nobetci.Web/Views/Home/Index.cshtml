@section Styles {
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    :root {
        --bg-cream: #fffbf7;
        --bg-warm: #fef7f0;
        --bg-white: #ffffff;
        --text: #1a1a1a;
        --text-muted: #6b6b6b;
        --border: #ebe5df;
        --accent: #d4553d;
        --accent-dark: #b8442f;
    }
    
    /* ═══════════════════════════════════════════════════════════
       TYPOGRAPHY
       ═══════════════════════════════════════════════════════════ */
    
    .heading-display {
        font-family: 'Playfair Display', Georgia, serif;
        font-weight: 600;
        letter-spacing: -0.02em;
        line-height: 1.1;
    }
    
    .text-body {
        font-family: 'Source Sans 3', -apple-system, sans-serif;
    }
    
    /* ═══════════════════════════════════════════════════════════
       HERO SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .hero {
        min-height: 92vh;
        display: flex;
        align-items: center;
        background: var(--bg-cream);
        position: relative;
        overflow: hidden;
    }
    
    .hero::before {
        content: '';
        position: absolute;
        top: -30%;
        right: -20%;
        width: 70%;
        height: 160%;
        background: radial-gradient(ellipse, rgba(212, 85, 61, 0.06) 0%, transparent 70%);
        pointer-events: none;
    }
    
    .hero::after {
        content: '';
        position: absolute;
        bottom: -20%;
        left: -10%;
        width: 50%;
        height: 100%;
        background: radial-gradient(ellipse, rgba(212, 85, 61, 0.04) 0%, transparent 60%);
        pointer-events: none;
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
        padding: 60px 0;
    }
    
    .hero-label {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 28px;
    }
    
    .hero-label-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: var(--accent);
        color: white;
        padding: 6px 14px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .hero-label-text {
        color: var(--text-muted);
        font-size: 0.9rem;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .hero-title {
        font-size: clamp(2.8rem, 6vw, 4.5rem);
        color: var(--text);
        margin-bottom: 28px;
        max-width: 600px;
    }
    
    .hero-title .highlight {
        color: var(--accent);
        position: relative;
    }
    
    .hero-title .highlight::after {
        content: '';
        position: absolute;
        bottom: 0.1em;
        left: 0;
        right: 0;
        height: 0.12em;
        background: var(--accent);
        opacity: 0.3;
        border-radius: 2px;
    }
    
    .hero-desc {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 1.25rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 500px;
        margin-bottom: 40px;
    }
    
    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 14px;
        margin-bottom: 48px;
    }
    
    .btn-primary-hero {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 28px;
        background: var(--text);
        color: white;
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.25s ease;
        box-shadow: 0 4px 14px rgba(26, 26, 26, 0.15);
    }
    
    .btn-primary-hero:hover {
        background: var(--accent);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(212, 85, 61, 0.25);
    }
    
    .btn-secondary-hero {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 28px;
        background: transparent;
        border: 2px solid var(--border);
        color: var(--text);
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.25s ease;
    }
    
    .btn-secondary-hero:hover {
        border-color: var(--text);
        background: var(--text);
        color: white;
    }
    
    .hero-trust {
        display: flex;
        flex-wrap: wrap;
        gap: 28px;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .trust-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--text-muted);
        font-size: 0.95rem;
    }
    
    .trust-icon {
        width: 22px;
        height: 22px;
        background: rgba(34, 197, 94, 0.12);
        color: #16a34a;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 700;
    }
    
    /* Hero Visual */
    .hero-visual {
        position: relative;
    }
    
    .hero-card {
        background: var(--bg-white);
        border: 1px solid var(--border);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.08), 0 10px 20px rgba(0, 0, 0, 0.04);
    }
    
    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 18px 24px;
        background: var(--bg-warm);
        border-bottom: 1px solid var(--border);
    }
    
    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text);
    }
    
    .card-badge {
        background: var(--accent);
        color: white;
        padding: 4px 10px;
        border-radius: 5px;
        font-size: 0.75rem;
        font-weight: 600;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .card-body {
        padding: 20px;
    }
    
    .schedule-grid {
        display: grid;
        grid-template-columns: 90px repeat(7, 1fr);
        gap: 3px;
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.8rem;
    }
    
    .sg-header {
        background: var(--bg-warm);
        padding: 10px 6px;
        text-align: center;
        color: var(--text-muted);
        font-weight: 600;
        border-radius: 6px;
    }
    
    .sg-header.name { text-align: left; padding-left: 10px; }
    .sg-header.weekend { color: var(--accent); }
    
    .sg-cell {
        background: var(--bg-cream);
        padding: 12px 6px;
        text-align: center;
        border-radius: 6px;
    }
    
    .sg-cell.name {
        text-align: left;
        padding-left: 10px;
        font-weight: 600;
        color: var(--text);
    }
    
    .shift-tag {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 5px;
        font-size: 0.7rem;
        font-weight: 700;
    }
    
    .shift-tag.morning { background: #dbeafe; color: #1d4ed8; }
    .shift-tag.night { background: #ede9fe; color: #7c3aed; }
    .shift-tag.long { background: #dcfce7; color: #16a34a; }
    
    /* Floating Stats */
    .float-stat {
        position: absolute;
        background: var(--bg-white);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 18px 22px;
        display: flex;
        align-items: center;
        gap: 14px;
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
        animation: floatUp 5s ease-in-out infinite;
    }
    
    .float-stat-1 { top: -10px; right: -20px; }
    .float-stat-2 { bottom: 30px; left: -30px; animation-delay: 2.5s; }
    
    @@keyframes floatUp {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    
    .stat-icon {
        width: 44px;
        height: 44px;
        background: var(--bg-warm);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
    }
    
    .stat-value {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--text);
    }
    
    .stat-label {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.8rem;
        color: var(--text-muted);
    }
    
    /* ═══════════════════════════════════════════════════════════
       PRODUCTS SECTION - 4 Main Features
       ═══════════════════════════════════════════════════════════ */
    
    .products-section {
        padding: 100px 0 120px;
        background: linear-gradient(180deg, var(--bg-white) 0%, var(--bg-cream) 100%);
        position: relative;
    }
    
    .products-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(90deg, transparent, var(--border), transparent);
