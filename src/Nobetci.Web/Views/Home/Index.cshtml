@{
    var isTurkish = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "tr";
    ViewData["Title"] = isTurkish ? "Nöbet Çizelgesi, Mesai Takip, Puantaj & İzin Yönetimi" : "Shift Scheduling, Time Attendance, Payroll & Leave Management";
    ViewData["MetaDescription"] = isTurkish 
        ? "Online nöbet çizelgesi oluşturma, mesai takip sistemi, puantaj hesaplama ve izin yönetimi. Hemşire nöbet programı, vardiya planı, otomatik puantaj ve fazla mesai hesaplama. Ücretsiz başlayın!"
        : "Online shift scheduling, time attendance tracking, payroll calculation and leave management system. Create nurse duty rosters, calculate timesheets and overtime automatically. Start free!";
    ViewData["MetaKeywords"] = isTurkish
        ? "nöbet çizelgesi, nöbet programı, mesai takip, puantaj sistemi, izin yönetimi, hemşire nöbet listesi, vardiya planı, fazla mesai hesaplama, gece çalışması, hafta sonu nöbeti"
        : "shift scheduling, duty roster, time attendance, payroll system, leave management, nurse scheduling, shift planning, overtime calculation, night shift, weekend duty";
}

