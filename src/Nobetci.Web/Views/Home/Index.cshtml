@{
    var isTurkish = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "tr";
    ViewData["Title"] = isTurkish ? "Online Nöbet & Puantaj Sistemi" : "Online Shift & Timesheet System";
    ViewData["MetaDescription"] = isTurkish 
        ? "Hemşire nöbet programı, vardiya planı, otomatik puantaj ve fazla mesai hesaplama. Adil dağıtım algoritması ile saniyeler içinde nöbet listesi oluşturun."
        : "Nurse shift scheduling, duty roster planning, automatic timesheet and overtime calculation. Create fair shift schedules in seconds.";
}

@section Styles {
<link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">
<style>
    :root {
        --bg-cream: #fffbf7;
        --bg-warm: #fef7f0;
        --bg-white: #ffffff;
        --text: #1a1a1a;
        --text-muted: #6b6b6b;
        --border: #ebe5df;
        --accent: #d4553d;
        --accent-dark: #b8442f;
    }
    
    /* ═══════════════════════════════════════════════════════════
       TYPOGRAPHY
       ═══════════════════════════════════════════════════════════ */
    
    .heading-display {
        font-family: 'Playfair Display', Georgia, serif;
        font-weight: 600;
        letter-spacing: -0.02em;
        line-height: 1.1;
    }
    
    .text-body {
        font-family: 'Source Sans 3', -apple-system, sans-serif;
    }
    
    /* ═══════════════════════════════════════════════════════════
       HERO SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .hero {
        min-height: 92vh;
        display: flex;
        align-items: center;
        background: var(--bg-cream);
        position: relative;
        overflow: hidden;
    }
    
    .hero::before {
        content: '';
        position: absolute;
        top: -30%;
        right: -20%;
        width: 70%;
        height: 160%;
        background: radial-gradient(ellipse, rgba(212, 85, 61, 0.06) 0%, transparent 70%);
        pointer-events: none;
    }
    
    .hero::after {
        content: '';
        position: absolute;
        bottom: -20%;
        left: -10%;
        width: 50%;
        height: 100%;
        background: radial-gradient(ellipse, rgba(212, 85, 61, 0.04) 0%, transparent 60%);
        pointer-events: none;
    }
    
    .hero-content {
        position: relative;
        z-index: 1;
        padding: 60px 0;
    }
    
    .hero-label {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 28px;
    }
    
    .hero-label-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: var(--accent);
        color: white;
        padding: 6px 14px;
        border-radius: 6px;
        font-size: 0.8rem;
        font-weight: 600;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .hero-label-text {
        color: var(--text-muted);
        font-size: 0.9rem;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .hero-title {
        font-size: clamp(2.8rem, 6vw, 4.5rem);
        color: var(--text);
        margin-bottom: 28px;
        max-width: 600px;
    }
    
    .hero-title .highlight {
        color: var(--accent);
        position: relative;
    }
    
    .hero-title .highlight::after {
        content: '';
        position: absolute;
        bottom: 0.1em;
        left: 0;
        right: 0;
        height: 0.12em;
        background: var(--accent);
        opacity: 0.3;
        border-radius: 2px;
    }
    
    .hero-desc {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 1.25rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 500px;
        margin-bottom: 40px;
    }
    
    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 14px;
        margin-bottom: 48px;
    }
    
    .btn-primary-hero {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 28px;
        background: var(--text);
        color: white;
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.25s ease;
        box-shadow: 0 4px 14px rgba(26, 26, 26, 0.15);
    }
    
    .btn-primary-hero:hover {
        background: var(--accent);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 24px rgba(212, 85, 61, 0.25);
    }
    
    .btn-secondary-hero {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 16px 28px;
        background: transparent;
        border: 2px solid var(--border);
        color: var(--text);
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 600;
        font-size: 1rem;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.25s ease;
    }
    
    .btn-secondary-hero:hover {
        border-color: var(--text);
        background: var(--text);
        color: white;
    }
    
    .hero-trust {
        display: flex;
        flex-wrap: wrap;
        gap: 28px;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .trust-item {
        display: flex;
        align-items: center;
        gap: 8px;
        color: var(--text-muted);
        font-size: 0.95rem;
    }
    
    .trust-icon {
        width: 22px;
        height: 22px;
        background: rgba(34, 197, 94, 0.12);
        color: #16a34a;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 700;
    }
    
    /* Hero Visual */
    .hero-visual {
        position: relative;
    }
    
    .hero-card {
        background: var(--bg-white);
        border: 1px solid var(--border);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.08), 0 10px 20px rgba(0, 0, 0, 0.04);
    }
    
    .card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 18px 24px;
        background: var(--bg-warm);
        border-bottom: 1px solid var(--border);
    }
    
    .card-title {
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text);
    }
    
    .card-badge {
        background: var(--accent);
        color: white;
        padding: 4px 10px;
        border-radius: 5px;
        font-size: 0.75rem;
        font-weight: 600;
        font-family: 'Source Sans 3', sans-serif;
    }
    
    .card-body {
        padding: 20px;
    }
    
    .schedule-grid {
        display: grid;
        grid-template-columns: 90px repeat(7, 1fr);
        gap: 3px;
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.8rem;
    }
    
    .sg-header {
        background: var(--bg-warm);
        padding: 10px 6px;
        text-align: center;
        color: var(--text-muted);
        font-weight: 600;
        border-radius: 6px;
    }
    
    .sg-header.name { text-align: left; padding-left: 10px; }
    .sg-header.weekend { color: var(--accent); }
    
    .sg-cell {
        background: var(--bg-cream);
        padding: 12px 6px;
        text-align: center;
        border-radius: 6px;
    }
    
    .sg-cell.name {
        text-align: left;
        padding-left: 10px;
        font-weight: 600;
        color: var(--text);
    }
    
    .shift-tag {
        display: inline-block;
        padding: 4px 8px;
        border-radius: 5px;
        font-size: 0.7rem;
        font-weight: 700;
    }
    
    .shift-tag.morning { background: #dbeafe; color: #1d4ed8; }
    .shift-tag.night { background: #ede9fe; color: #7c3aed; }
    .shift-tag.long { background: #dcfce7; color: #16a34a; }
    
    /* Floating Stats */
    .float-stat {
        position: absolute;
        background: var(--bg-white);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 18px 22px;
        display: flex;
        align-items: center;
        gap: 14px;
        box-shadow: 0 12px 32px rgba(0, 0, 0, 0.08);
        animation: floatUp 5s ease-in-out infinite;
    }
    
    .float-stat-1 { top: -10px; right: -20px; }
    .float-stat-2 { bottom: 30px; left: -30px; animation-delay: 2.5s; }
    
    @@keyframes floatUp {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }
    
    .stat-icon {
        width: 44px;
        height: 44px;
        background: var(--bg-warm);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
    }
    
    .stat-value {
        font-family: 'Playfair Display', serif;
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--text);
    }
    
    .stat-label {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.8rem;
        color: var(--text-muted);
    }
    
    /* ═══════════════════════════════════════════════════════════
       FEATURES SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .features {
        padding: 120px 0;
        background: var(--bg-white);
    }
    
    .section-eyebrow {
        display: inline-block;
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: var(--accent);
        margin-bottom: 16px;
    }
    
    .section-heading {
        font-size: clamp(2rem, 4vw, 2.8rem);
        color: var(--text);
        margin-bottom: 20px;
        max-width: 500px;
    }
    
    .section-text {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 1.15rem;
        color: var(--text-muted);
        line-height: 1.7;
        max-width: 460px;
    }
    
    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 56px;
    }
    
    .feature-box {
        background: var(--bg-cream);
        border: 1px solid transparent;
        border-radius: 18px;
        padding: 32px;
        transition: all 0.3s ease;
    }
    
    .feature-box:hover {
        background: var(--bg-white);
        border-color: var(--border);
        box-shadow: 0 16px 40px rgba(0, 0, 0, 0.06);
        transform: translateY(-4px);
    }
    
    .feature-emoji {
        font-size: 2rem;
        margin-bottom: 20px;
        display: block;
    }
    
    .feature-name {
        font-family: 'Playfair Display', serif;
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 10px;
    }
    
    .feature-desc {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }
    
    /* ═══════════════════════════════════════════════════════════
       HOW IT WORKS
       ═══════════════════════════════════════════════════════════ */
    
    .steps-section {
        padding: 120px 0;
        background: var(--bg-warm);
    }
    
    .steps-row {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        margin-top: 56px;
    }
    
    .step-box {
        text-align: center;
        position: relative;
    }
    
    .step-num {
        width: 80px;
        height: 80px;
        background: var(--bg-white);
        border: 2px solid var(--border);
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-bottom: 24px;
        position: relative;
        transition: all 0.3s ease;
    }
    
    .step-box:hover .step-num {
        border-color: var(--accent);
        transform: translateY(-4px);
        box-shadow: 0 12px 28px rgba(212, 85, 61, 0.12);
    }
    
    .step-badge {
        position: absolute;
        top: -8px;
        right: -8px;
        width: 26px;
        height: 26px;
        background: var(--accent);
        color: white;
        border-radius: 50%;
        font-family: 'Playfair Display', serif;
        font-size: 0.85rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .step-name {
        font-family: 'Playfair Display', serif;
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 10px;
    }
    
    .step-text {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
    }
    
    /* ═══════════════════════════════════════════════════════════
       TIMESHEET SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .timesheet {
        padding: 120px 0;
        background: var(--bg-white);
    }
    
    .ts-card {
        background: var(--bg-cream);
        border: 1px solid var(--border);
        border-radius: 20px;
        overflow: hidden;
    }
    
    .ts-head {
        background: var(--text);
        color: white;
        padding: 22px 28px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }
    
    .ts-head h4 {
        font-family: 'Playfair Display', serif;
        font-size: 1.15rem;
        font-weight: 600;
        margin: 0;
    }
    
    .ts-body {
        padding: 24px;
        background: var(--bg-white);
    }
    
    .ts-table {
        width: 100%;
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.9rem;
        border-collapse: collapse;
    }
    
    .ts-table th {
        text-align: left;
        padding: 14px 16px;
        background: var(--bg-cream);
        color: var(--text-muted);
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .ts-table td {
        padding: 18px 16px;
        border-bottom: 1px solid var(--border);
    }
    
    .ts-table tr:last-child td { border-bottom: none; }
    
    .ts-emp { font-weight: 600; color: var(--text); }
    .ts-night { color: #7c3aed; font-weight: 600; }
    .ts-wknd { color: #f59e0b; font-weight: 600; }
    .ts-ot { color: var(--accent); font-weight: 600; }
    .ts-tot { font-weight: 700; color: var(--text); }
    
    .ts-foot {
        padding: 20px 28px;
        background: var(--bg-cream);
        display: flex;
        justify-content: flex-end;
    }
    
    .btn-excel {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 22px;
        background: #16a34a;
        color: white;
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 600;
        font-size: 0.9rem;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }
    
    .btn-excel:hover { background: #15803d; transform: translateY(-1px); }
    
    .ts-features-list {
        display: flex;
        flex-direction: column;
        gap: 28px;
    }
    
    .tsf-item {
        display: flex;
        gap: 18px;
    }
    
    .tsf-icon {
        width: 52px;
        height: 52px;
        background: var(--bg-cream);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.6rem;
        flex-shrink: 0;
    }
    
    .tsf-content h5 {
        font-family: 'Playfair Display', serif;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 4px;
    }
    
    .tsf-content p {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 0.95rem;
        color: var(--text-muted);
        margin: 0;
        line-height: 1.5;
    }
    
    /* ═══════════════════════════════════════════════════════════
       CTA SECTION
       ═══════════════════════════════════════════════════════════ */
    
    .cta {
        padding: 100px 0;
        background: var(--bg-warm);
        text-align: center;
    }
    
    .cta-heading {
        font-size: clamp(2rem, 5vw, 3rem);
        color: var(--text);
        margin-bottom: 18px;
    }
    
    .cta-text {
        font-family: 'Source Sans 3', sans-serif;
        font-size: 1.15rem;
        color: var(--text-muted);
        margin-bottom: 36px;
    }
    
    .btn-cta {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 18px 36px;
        background: var(--accent);
        color: white;
        font-family: 'Source Sans 3', sans-serif;
        font-weight: 700;
        font-size: 1.1rem;
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.25s ease;
        box-shadow: 0 6px 20px rgba(212, 85, 61, 0.25);
    }
    
    .btn-cta:hover {
        background: var(--accent-dark);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(212, 85, 61, 0.35);
    }
    
    /* ═══════════════════════════════════════════════════════════
       RESPONSIVE
       ═══════════════════════════════════════════════════════════ */
    
    @@media (max-width: 991px) {
        .hero-visual { display: none; }
        .features-grid { grid-template-columns: repeat(2, 1fr); }
        .steps-row { grid-template-columns: 1fr; gap: 32px; }
    }
    
    @@media (max-width: 767px) {
        .features-grid { grid-template-columns: 1fr; }
        .hero-actions { flex-direction: column; }
        .btn-primary-hero, .btn-secondary-hero { width: 100%; justify-content: center; }
    }
</style>
}

