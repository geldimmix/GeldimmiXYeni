            }
            
            .form-header h1 {
                font-size: 1.75rem;
            }
        }
        
        @@media (max-width: 480px) {
            .register-form-panel {
                padding: 32px 20px;
            }
            
            .input-field {
                padding: 14px 16px;
            }
            
            .btn-submit {
                padding: 14px 20px;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
        }
        
        /* Mobile brand header */
        .mobile-brand {
            display: none;
            margin-bottom: 32px;
        }
        
        @@media (max-width: 1024px) {
            .mobile-brand {
