@model RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Register"];
    var isTurkish = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "tr";
}

<style>
    .auth-container {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 40px 20px;
    }
    
    .auth-card {
        width: 100%;
        max-width: 480px;
        background: white;
        border-radius: 20px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        overflow: hidden;
    }
    
    .auth-header {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        padding: 32px;
        text-align: center;
    }
    
    .auth-header h2 {
        font-size: 1.75rem;
        font-weight: 700;
        margin: 0 0 8px 0;
    }
    
    .auth-header p {
        opacity: 0.9;
        margin: 0;
        font-size: 0.9rem;
    }
    
    .auth-body {
        padding: 32px;
    }
    
    /* Benefits Box */
    .benefits-box {
        background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
        border: 1px solid #a7f3d0;
        border-radius: 12px;
        padding: 16px 20px;
        margin-bottom: 24px;
    }
    
    .benefits-box h4 {
        font-size: 0.9rem;
        font-weight: 700;
        color: #059669;
        margin: 0 0 12px 0;
        display: flex;
        align-items: center;
        gap: 8px;
    }
    
    .benefits-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }
    
    .benefits-list li {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.85rem;
        color: #047857;
        padding: 4px 0;
    }
    
    .benefits-list li::before {
        content: '‚úì';
        font-weight: bold;
        color: #22c55e;
    }
    
    .form-input-group {
        margin-bottom: 16px;
    }
    
    .form-input-group label {
        display: block;
        font-size: 0.85rem;
        font-weight: 600;
        color: #374151;
        margin-bottom: 6px;
    }
    
    .form-input {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        font-size: 1rem;
        transition: all 0.2s;
    }
    
    .form-input:focus {
        outline: none;
        border-color: #22c55e;
        box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.1);
    }
    
    .btn-register {
        width: 100%;
        padding: 14px 20px;
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        margin-top: 8px;
    }
    
    .btn-register:hover {
        transform: translateY(-1px);
        box-shadow: 0 6px 20px rgba(34, 197, 94, 0.4);
    }
    
    .auth-footer {
        text-align: center;
        padding: 24px;
        background: #f8fafc;
        font-size: 0.9rem;
        color: #64748b;
    }
    
    .auth-footer a {
        color: #22c55e;
        font-weight: 600;
        text-decoration: none;
    }
    
    .auth-footer a:hover {
        text-decoration: underline;
    }
    
    .alert-custom {
        padding: 12px 16px;
        border-radius: 10px;
        margin-bottom: 16px;
        font-size: 0.9rem;
    }
    
    .alert-danger-custom {
        background: #fef2f2;
        border: 1px solid #fecaca;
        color: #dc2626;
    }
    
    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }
</style>

<div class="auth-container">
    <div class="auth-card">
        <div class="auth-header">
            <h2>@(isTurkish ? "Hesap Olu≈üturun" : "Create Account")</h2>
            <p>@(isTurkish ? "√úcretsiz kayƒ±t olun, hemen ba≈ülayƒ±n" : "Sign up for free, start now")</p>
        </div>
        
        <div class="auth-body">
            <!-- Benefits -->
            <div class="benefits-box">
                <h4>üéÅ @(isTurkish ? "√úcretsiz Hesap Avantajlarƒ±" : "Free Account Benefits")</h4>
                <ul class="benefits-list">
                    <li>@(isTurkish ? "20 personel y√∂netimi (kayƒ±tsƒ±z 7)" : "20 employees (vs 7 without account)")</li>
                    <li>@(isTurkish ? "Akƒ±llƒ± n√∂bet planlamasƒ±" : "Smart shift scheduling")</li>
                    <li>@(isTurkish ? "Puantaj ve mesai hesaplama" : "Timesheet and overtime calculation")</li>
                    <li>@(isTurkish ? "Excel export" : "Excel export")</li>
                    <li>@(isTurkish ? "Verileriniz g√ºvende" : "Your data is secure")</li>
                </ul>
            </div>
            
            <!-- Email Registration -->
            <form asp-action="Register" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert-custom alert-danger-custom">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                
                <div class="form-input-group">
                    <label for="FullName">@(isTurkish ? "Ad Soyad" : "Full Name")</label>
                    <input asp-for="FullName" class="form-input" placeholder="@(isTurkish ? "Adƒ±nƒ±z Soyadƒ±nƒ±z" : "Your Name")" />
                    <span asp-validation-for="FullName" class="text-danger small"></span>
                </div>
                
                <div class="form-input-group">
                    <label for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-input" placeholder="ornek@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                
                <div class="form-row">
                    <div class="form-input-group">
                        <label for="Password">@(isTurkish ? "≈ûifre" : "Password")</label>
                        <input asp-for="Password" type="password" class="form-input" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>
                    
                    <div class="form-input-group">
                        <label for="ConfirmPassword">@(isTurkish ? "≈ûifre Tekrar" : "Confirm")</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-input" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                    </div>
                </div>
                
                <button type="submit" class="btn-register">
                    @(isTurkish ? "√úcretsiz Kayƒ±t Ol" : "Create Free Account")
                </button>
            </form>
        </div>
        
        <div class="auth-footer">
            @(isTurkish ? "Zaten hesabƒ±nƒ±z var mƒ±?" : "Already have an account?")
            <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                @(isTurkish ? "Giri≈ü Yapƒ±n" : "Sign In")
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
