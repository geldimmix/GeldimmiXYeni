@model RegisterViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Register"];
    Layout = null;
    var currentLang = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isRtl = currentLang == "ar";
}

<!DOCTYPE html>
<html lang="@currentLang" dir="@(isRtl ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["SignUp"] - Geldimmi</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        :root {
            --bg-cream: #fffbf7;
            --bg-warm: #fef7f0;
            --bg-white: #ffffff;
            --text: #1a1a1a;
            --text-muted: #6b6b6b;
            --border: #ebe5df;
            --accent: #d4553d;
            --accent-dark: #b8442f;
            --success: #16a34a;
            --success-light: #f0fdf4;
        }
        
        body {
            font-family: 'Source Sans 3', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg-cream);
            min-height: 100vh;
            display: flex;
        }
        
        .register-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }
        
        /* Left Panel - Branding */
        .register-brand {
            flex: 1;
            background: var(--bg-warm);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 48px;
            position: relative;
            overflow: hidden;
        }
        
        .register-brand::before {
            content: '';
            position: absolute;
            top: -30%;
            right: -30%;
            width: 160%;
            height: 160%;
            background: radial-gradient(circle at 70% 30%, rgba(22, 163, 74, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }
        
        .brand-top {
            position: relative;
            z-index: 1;
        }
        
        .brand-logo {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }
        
        .brand-icon {
            width: 44px;
            height: 44px;
            background: var(--accent);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 22px;
            font-weight: 600;
            color: white;
        }
        
        .brand-name {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--text);
            letter-spacing: -0.02em;
        }
        
        .brand-content {
            position: relative;
            z-index: 1;
            max-width: 400px;
        }
        
        .brand-headline {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 2.8rem;
            font-weight: 600;
            color: var(--text);
            line-height: 1.15;
            letter-spacing: -0.02em;
            margin-bottom: 32px;
        }
        
        .brand-headline span {
            color: var(--success);
        }
        
        .benefits-grid {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .benefit-card {
            background: var(--bg-white);
            border: 1px solid var(--border);
            border-radius: 14px;
            padding: 20px;
            display: flex;
            gap: 16px;
        }
        
        .benefit-icon {
            width: 44px;
            height: 44px;
            background: var(--success-light);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            flex-shrink: 0;
        }
        
        .benefit-text h4 {
            font-family: 'Playfair Display', Georgia, serif;
            color: var(--text);
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 4px;
        }
        
        .benefit-text p {
            color: var(--text-muted);
            font-size: 0.9rem;
            line-height: 1.5;
        }
        
        .brand-footer {
            position: relative;
            z-index: 1;
            color: var(--text-muted);
            font-size: 0.85rem;
        }
        
        /* Right Panel - Form */
        .register-form-panel {
            width: 560px;
            min-width: 560px;
            background: var(--bg-white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 56px 64px;
            overflow-y: auto;
            border-left: 1px solid var(--border);
        }
        
        .form-header {
            margin-bottom: 36px;
        }
        
        .form-header h1 {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 2rem;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }
        
        .form-header p {
            color: var(--text-muted);
            font-size: 1rem;
        }
        
        .free-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: var(--success-light);
            color: var(--success);
            font-size: 0.8rem;
            font-weight: 600;
            padding: 6px 12px;
            border-radius: 20px;
            margin-bottom: 16px;
        }
        
        .register-form {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }
        
        .input-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .input-group label {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text);
        }
        
        .input-field {
            width: 100%;
            padding: 16px 18px;
            border: 1.5px solid var(--border);
            border-radius: 12px;
            font-size: 1rem;
            font-family: inherit;
            background: var(--bg-cream);
            transition: all 0.2s ease;
        }
        
        .input-field::placeholder {
            color: #a3a3a3;
        }
        
        .input-field:hover {
            border-color: #d4d4d4;
        }
        
        .input-field:focus {
            outline: none;
            border-color: var(--success);
            background: var(--bg-white);
            box-shadow: 0 0 0 4px rgba(22, 163, 74, 0.08);
        }
        
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }
        
        .btn-submit {
            width: 100%;
            padding: 16px 24px;
            background: var(--success);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            font-family: inherit;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 8px;
        }
        
        .btn-submit:hover {
            background: #15803d;
            transform: translateY(-1px);
            box-shadow: 0 8px 24px rgba(22, 163, 74, 0.2);
        }
        
        .form-footer {
            text-align: center;
            margin-top: 32px;
            padding-top: 32px;
            border-top: 1px solid var(--border);
        }
        
        .form-footer p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }
        
        .form-footer a {
            color: var(--accent);
            font-weight: 600;
            text-decoration: none;
        }
        
        .form-footer a:hover {
            text-decoration: underline;
        }
        
        .alert-error {
            padding: 14px 18px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 12px;
            color: #dc2626;
            font-size: 0.9rem;
        }
        
        .text-danger {
            color: #dc2626;
            font-size: 0.8rem;
            margin-top: 4px;
        }
        
        .terms-text {
            font-size: 0.85rem;
            color: var(--text-muted);
            text-align: center;
            line-height: 1.6;
        }
        
        .terms-text a {
            color: var(--text);
            text-decoration: underline;
        }
        
        /* Responsive */
        @@media (max-width: 1024px) {
            .register-brand { display: none; }
            .register-form-panel {
                width: 100%;
                min-width: unset;
                padding: 40px 24px;
                border-left: none;
            }
        }
        
        @@media (max-width: 480px) {
            .register-form-panel { padding: 32px 20px; }
            .input-field { padding: 14px 16px; }
            .btn-submit { padding: 14px 20px; }
            .form-row { grid-template-columns: 1fr; }
        }
        
        /* Mobile brand header */
        .mobile-brand {
            display: none;
            margin-bottom: 32px;
        }
        
        @@media (max-width: 1024px) {
            .mobile-brand {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }
            .mobile-brand .brand-icon {
                width: 40px;
                height: 40px;
                font-size: 20px;
            }
            .mobile-brand .brand-name {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Left Panel -->
        <div class="register-brand">
            <div class="brand-top">
                <a href="/" class="brand-logo">
                    <div class="brand-icon">G</div>
                    <span class="brand-name">Geldimmi</span>
                </a>
            </div>
            
            <div class="brand-content">
                <h2 class="brand-headline">
                    @Html.Raw(Localizer["RegisterBrandHeadline"].Value)
                </h2>
                
                <div class="benefits-grid">
                    <div class="benefit-card">
                        <div class="benefit-icon">ðŸ‘¥</div>
                        <div class="benefit-text">
                            <h4>@Localizer["20EmployeeManagement"]</h4>
                            <p>@Localizer["Manage20EmployeesInsteadOf7"]</p>
                        </div>
                    </div>
                    <div class="benefit-card">
                        <div class="benefit-icon">ðŸ’¾</div>
                        <div class="benefit-text">
                            <h4>@Localizer["YourDataIsSafe"]</h4>
                            <p>@Localizer["YourRostersAndTimesheetsStoredInCloud"]</p>
                        </div>
                    </div>
                    <div class="benefit-card">
                        <div class="benefit-icon">ðŸ“Š</div>
                        <div class="benefit-text">
                            <h4>@Localizer["AdvancedReports"]</h4>
                            <p>@Localizer["DetailedTimesheetAndOvertimeReports"]</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="brand-footer">
                Â© 2026 Geldimmi. @Localizer["AllRightsReserved"]
            </div>
        </div>
        
        <!-- Right Panel -->
        <div class="register-form-panel">
            <div class="mobile-brand">
                <div class="brand-icon">G</div>
                <span class="brand-name">Geldimmi</span>
            </div>
            
            <div class="form-header">
                <span class="free-badge">âœ¨ @Localizer["CompletelyFree"]</span>
                <h1>@Localizer["CreateYourAccount"]</h1>
                <p>@Localizer["GetStartedNowNoCreditCard"]</p>
            </div>
            
            <form asp-action="Register" method="post" class="register-form">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert-error">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                
                <div class="input-group">
                    <label for="FullName">@Localizer["FullName"]</label>
                    <input asp-for="FullName" class="input-field" placeholder="@Localizer["YourFullName"]" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                
                <div class="input-group">
                    <label for="Email">@Localizer["EmailAddress"]</label>
                    <input asp-for="Email" type="email" class="input-field" placeholder="@Localizer["EmailPlaceholder"].Value" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-row">
                    <div class="input-group">
                        <label for="Password">@Localizer["Password"]</label>
                        <input asp-for="Password" type="password" class="input-field" placeholder="@Localizer["PasswordPlaceholder"].Value" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="input-group">
                        <label for="ConfirmPassword">@Localizer["ConfirmPassword"]</label>
                        <input asp-for="ConfirmPassword" type="password" class="input-field" placeholder="@Localizer["PasswordPlaceholder"].Value" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                
                <button type="submit" class="btn-submit">
                    @Localizer["CreateFreeAccount"]
                </button>
                
                <p class="terms-text">
                    @Localizer["BySigningUpYouAgreeToOur"]
                    <a href="/terms">@Localizer["TermsOfService"]</a>
                    @Localizer["And"]
                    <a href="/privacy">@Localizer["PrivacyPolicy"]</a>@Localizer["Period"]
                </p>
            </form>
            
            <div class="form-footer">
                <p>
                    @Localizer["AlreadyHaveAccount"]
                    <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        @Localizer["SignIn"]
                    </a>
                </p>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
