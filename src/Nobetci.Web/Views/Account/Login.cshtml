@model LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Login"];
    var isTurkish = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "tr";
}

<style>
    :root {
        --auth-bg: #f7f7f7;
        --card-bg: #ffffff;
        --text: #1f1f1f;
        --muted: #6b7280;
        --border: #e5e7eb;
        --accent: #c94a4a;
        --accent-strong: #a33d3d;
    }
    .auth-wrap {
        min-height: calc(100vh - 120px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--auth-bg);
        padding: 48px 16px;
        font-family: 'DM Sans', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    .auth-card {
        width: 100%;
        max-width: 520px;
        background: var(--card-bg);
        border: 1px solid var(--border);
        border-radius: 18px;
        box-shadow: 0 14px 48px rgba(0,0,0,0.08);
        padding: 28px;
    }
    .auth-head {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
    }
    .auth-badge {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        background: var(--accent);
        color: #fff;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        letter-spacing: -0.03em;
    }
    .auth-title {
        margin: 0;
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--text);
    }
    .auth-sub {
        margin: 4px 0 0;
        color: var(--muted);
        font-size: 0.95rem;
    }
    .auth-body {
        margin-top: 12px;
    }
    .form-input-group {
        margin-bottom: 18px;
    }
    .form-input-group label {
        display: block;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--text);
        margin-bottom: 8px;
    }
    .form-input {
        width: 100%;
        padding: 13px 14px;
        border: 1px solid var(--border);
        border-radius: 10px;
        font-size: 1rem;
        background: #fcfcfc;
        transition: border-color 0.15s ease, box-shadow 0.15s ease;
    }
    .form-input:focus {
        outline: none;
        border-color: var(--accent);
        box-shadow: 0 0 0 4px rgba(201, 74, 74, 0.12);
        background: #fff;
    }
    .form-check-custom {
        display: flex;
        align-items: center;
        gap: 10px;
        margin-bottom: 18px;
    }
    .form-check-custom input[type="checkbox"] {
        width: 18px;
        height: 18px;
        accent-color: var(--accent);
    }
    .form-check-custom label {
        font-size: 0.93rem;
        color: var(--muted);
    }
    .btn-login {
        width: 100%;
        padding: 13px 18px;
        background: var(--accent);
        color: #fff;
        border: none;
        border-radius: 10px;
        font-weight: 700;
        font-size: 1rem;
        cursor: pointer;
        transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.15s ease;
    }
    .btn-login:hover {
        background: var(--accent-strong);
        transform: translateY(-1px);
        box-shadow: 0 10px 24px rgba(201, 74, 74, 0.25);
    }
    .auth-footer {
        margin-top: 18px;
        font-size: 0.95rem;
        color: var(--muted);
        text-align: center;
    }
    .auth-footer a {
        color: var(--accent);
        font-weight: 700;
        text-decoration: none;
    }
    .auth-footer a:hover {
        color: var(--accent-strong);
        text-decoration: underline;
    }
    .alert-custom {
        padding: 12px 14px;
        border-radius: 10px;
        margin-bottom: 18px;
        font-size: 0.93rem;
        border: 1px solid #f3c5c5;
        background: #fff5f5;
        color: #b91c1c;
    }
    .auth-hint {
        margin-top: 14px;
        font-size: 0.9rem;
        color: var(--muted);
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }
</style>

<div class="auth-wrap">
    <div class="auth-card">
        <div class="auth-head">
            <div class="auth-badge">G</div>
            <div>
                <h1 class="auth-title">@((isTurkish ? "Hoş Geldiniz" : "Welcome Back"))</h1>
                <p class="auth-sub">@((isTurkish ? "Hesabınıza giriş yapın" : "Sign in to your account"))</p>
            </div>
        </div>

        <div class="auth-body">
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert-custom">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <div class="form-input-group">
                    <label for="Email">Email</label>
                    <input asp-for="Email" type="email" class="form-input" placeholder="ornek@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="form-input-group">
                    <label for="Password">@(isTurkish ? "Şifre" : "Password")</label>
                    <input asp-for="Password" type="password" class="form-input" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check-custom">
                    <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                    <label for="RememberMe">@(isTurkish ? "Beni hatırla" : "Remember me")</label>
                </div>

                <button type="submit" class="btn-login">
                    @(isTurkish ? "Giriş Yap" : "Sign In")
                </button>
            </form>

            <div class="auth-hint">
                <span>• @(isTurkish ? "Şifreni unuttuysan yeni şifre alabilirsin." : "Forgot password? Request a reset link.")</span>
                <span>• @(isTurkish ? "Güvenli oturum için kişisel cihazını kullan." : "Use a trusted device for secure sign-in.")</span>
            </div>
        </div>

        <div class="auth-footer">
            @(isTurkish ? "Hesabınız yok mu?" : "Don't have an account?")
            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                @(isTurkish ? "Kayıt Olun" : "Sign Up")
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
