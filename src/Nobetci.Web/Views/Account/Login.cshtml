@model LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["Login"];
    Layout = null;
    var isTurkish = System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName == "tr";
}

<!DOCTYPE html>
<html lang="@(isTurkish ? "tr" : "en")">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isTurkish ? "Giri≈ü Yap" : "Sign In") - Geldimmi</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        *, *::before, *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }
        
        :root {
            --bg-cream: #fffbf7;
            --bg-warm: #fef7f0;
            --bg-white: #ffffff;
            --text: #1a1a1a;
            --text-muted: #6b6b6b;
            --border: #ebe5df;
            --accent: #d4553d;
            --accent-dark: #b8442f;
        }
        
        body {
            font-family: 'Source Sans 3', -apple-system, BlinkMacSystemFont, sans-serif;
            background: var(--bg-cream);
            min-height: 100vh;
            display: flex;
        }
        
        .login-container {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }
        
        /* Left Panel - Branding */
        .login-brand {
            flex: 1;
            background: var(--bg-warm);
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 48px;
            position: relative;
            overflow: hidden;
        }
        
        .login-brand::before {
            content: '';
            position: absolute;
            top: -30%;
            left: -30%;
            width: 160%;
            height: 160%;
            background: radial-gradient(circle at 30% 30%, rgba(212, 85, 61, 0.08) 0%, transparent 50%);
            pointer-events: none;
        }
        
        .brand-top {
            position: relative;
            z-index: 1;
        }
        
        .brand-logo {
            display: inline-flex;
            align-items: center;
            gap: 12px;
            text-decoration: none;
        }
        
        .brand-icon {
            width: 44px;
            height: 44px;
            background: var(--accent);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 22px;
            font-weight: 600;
            color: white;
        }
        
        .brand-name {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 1.75rem;
            font-weight: 600;
            color: var(--text);
            letter-spacing: -0.02em;
        }
        
        .brand-content {
            position: relative;
            z-index: 1;
            max-width: 400px;
        }
        
        .brand-headline {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 3rem;
            font-weight: 600;
            color: var(--text);
            line-height: 1.15;
            letter-spacing: -0.02em;
            margin-bottom: 24px;
        }
        
        .brand-headline span {
            color: var(--accent);
        }
        
        .brand-desc {
            font-size: 1.1rem;
            color: var(--text-muted);
            line-height: 1.7;
        }
        
        .brand-features {
            display: flex;
            flex-direction: column;
            gap: 16px;
            margin-top: 40px;
        }
        
        .feature-item {
            display: flex;
            align-items: center;
            gap: 14px;
            color: var(--text-muted);
            font-size: 0.95rem;
        }
        
        .feature-icon {
            width: 36px;
            height: 36px;
            background: var(--bg-white);
            border: 1px solid var(--border);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
        }
        
        .brand-footer {
            position: relative;
            z-index: 1;
            color: var(--text-muted);
            font-size: 0.85rem;
        }
        
        /* Right Panel - Form */
        .login-form-panel {
            width: 520px;
            min-width: 520px;
            background: var(--bg-white);
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 64px;
            border-left: 1px solid var(--border);
        }
        
        .form-header {
            margin-bottom: 40px;
        }
        
        .form-header h1 {
            font-family: 'Playfair Display', Georgia, serif;
            font-size: 2rem;
            font-weight: 600;
            color: var(--text);
            margin-bottom: 8px;
            letter-spacing: -0.02em;
        }
        
        .form-header p {
            color: var(--text-muted);
            font-size: 1rem;
        }
        
        .login-form {
            display: flex;
            flex-direction: column;
            gap: 24px;
        }
        
        .input-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }
        
        .input-group label {
            font-size: 0.9rem;
            font-weight: 600;
            color: var(--text);
        }
        
        .input-field {
            width: 100%;
            padding: 16px 18px;
            border: 1.5px solid var(--border);
            border-radius: 12px;
            font-size: 1rem;
            font-family: inherit;
            background: var(--bg-cream);
            transition: all 0.2s ease;
        }
        
        .input-field::placeholder {
            color: #a3a3a3;
        }
        
        .input-field:hover {
            border-color: #d4d4d4;
        }
        
        .input-field:focus {
            outline: none;
            border-color: var(--accent);
            background: var(--bg-white);
            box-shadow: 0 0 0 4px rgba(212, 85, 61, 0.08);
        }
        
        .form-options {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .checkbox-group {
            display: flex;
            align-items: center;
            gap: 10px;
            cursor: pointer;
        }
        
        .checkbox-group input[type="checkbox"] {
            width: 18px;
            height: 18px;
            accent-color: var(--accent);
            cursor: pointer;
        }
        
        .checkbox-group span {
            font-size: 0.9rem;
            color: var(--text-muted);
        }
        
        .forgot-link {
            font-size: 0.9rem;
            color: var(--text-muted);
            text-decoration: none;
            transition: color 0.15s;
        }
        
        .forgot-link:hover {
            color: var(--accent);
        }
        
        .btn-submit {
            width: 100%;
            padding: 16px 24px;
            background: var(--text);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            font-family: inherit;
            cursor: pointer;
            transition: all 0.2s ease;
            margin-top: 8px;
        }
        
        .btn-submit:hover {
            background: var(--accent);
            transform: translateY(-1px);
            box-shadow: 0 8px 24px rgba(212, 85, 61, 0.2);
        }
        
        .form-footer {
            text-align: center;
            margin-top: 32px;
            padding-top: 32px;
            border-top: 1px solid var(--border);
        }
        
        .form-footer p {
            color: var(--text-muted);
            font-size: 0.95rem;
        }
        
        .form-footer a {
            color: var(--accent);
            font-weight: 600;
            text-decoration: none;
        }
        
        .form-footer a:hover {
            text-decoration: underline;
        }
        
        .alert-error {
            padding: 14px 18px;
            background: #fef2f2;
            border: 1px solid #fecaca;
            border-radius: 12px;
            color: #dc2626;
            font-size: 0.9rem;
        }
        
        .text-danger {
            color: #dc2626;
            font-size: 0.8rem;
            margin-top: 4px;
        }
        
        /* Responsive */
        @@media (max-width: 1024px) {
            .login-brand { display: none; }
            .login-form-panel {
                width: 100%;
                min-width: unset;
                padding: 40px 24px;
                border-left: none;
            }
        }
        
        @@media (max-width: 480px) {
            .login-form-panel { padding: 32px 20px; }
            .input-field { padding: 14px 16px; }
            .btn-submit { padding: 14px 20px; }
        }
        
        /* Mobile brand header */
        .mobile-brand {
            display: none;
            margin-bottom: 32px;
        }
        
        @@media (max-width: 1024px) {
            .mobile-brand {
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 10px;
            }
            .mobile-brand .brand-icon {
                width: 40px;
                height: 40px;
                font-size: 20px;
            }
            .mobile-brand .brand-name {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Left Panel -->
        <div class="login-brand">
            <div class="brand-top">
                <a href="/" class="brand-logo">
                    <div class="brand-icon">G</div>
                    <span class="brand-name">Geldimmi</span>
                </a>
            </div>
            
            <div class="brand-content">
                <h2 class="brand-headline">
                    @if (isTurkish)
                    {
                        <text>N√∂bet planlamayƒ± <span>kolayla≈ütƒ±rƒ±n</span></text>
                    }
                    else
                    {
                        <text>Make scheduling <span>effortless</span></text>
                    }
                </h2>
                <p class="brand-desc">
                    @(isTurkish 
                        ? "Hastaneler ve i≈ületmeler i√ßin akƒ±llƒ± n√∂bet planlama sistemi. Otomatik puantaj, adil daƒüƒ±tƒ±m ve ger√ßek zamanlƒ± takip."
                        : "Smart shift scheduling for hospitals and businesses. Automatic timesheets, fair distribution, and real-time tracking.")
                </p>
                
                <div class="brand-features">
                    <div class="feature-item">
                        <div class="feature-icon">‚ö°</div>
                        <span>@(isTurkish ? "Saniyeler i√ßinde n√∂bet listesi olu≈üturun" : "Create rosters in seconds")</span>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">‚öñÔ∏è</div>
                        <span>@(isTurkish ? "Adil ve dengeli n√∂bet daƒüƒ±tƒ±mƒ±" : "Fair and balanced shift distribution")</span>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">üìä</div>
                        <span>@(isTurkish ? "Otomatik puantaj ve raporlama" : "Automatic timesheets and reports")</span>
                    </div>
                </div>
            </div>
            
            <div class="brand-footer">
                ¬© 2026 Geldimmi. @(isTurkish ? "T√ºm haklarƒ± saklƒ±dƒ±r." : "All rights reserved.")
            </div>
        </div>
        
        <!-- Right Panel -->
        <div class="login-form-panel">
            <div class="mobile-brand">
                <div class="brand-icon">G</div>
                <span class="brand-name">Geldimmi</span>
            </div>
            
            <div class="form-header">
                <h1>@(isTurkish ? "Tekrar ho≈ü geldiniz" : "Welcome back")</h1>
                <p>@(isTurkish ? "Hesabƒ±nƒ±za giri≈ü yaparak devam edin" : "Sign in to continue to your account")</p>
            </div>
            
            <form asp-action="Login" method="post" class="login-form">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert-error">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }
                
                <div class="input-group">
                    <label for="Email">@(isTurkish ? "E-posta adresi" : "Email address")</label>
                    <input asp-for="Email" type="email" class="input-field" placeholder="ornek@email.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="input-group">
                    <label for="Password">@(isTurkish ? "≈ûifre" : "Password")</label>
                    <input asp-for="Password" type="password" class="input-field" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-options">
                    <label class="checkbox-group">
                        <input asp-for="RememberMe" type="checkbox" />
                        <span>@(isTurkish ? "Beni hatƒ±rla" : "Remember me")</span>
                    </label>
                    <a href="#" class="forgot-link">@(isTurkish ? "≈ûifremi unuttum" : "Forgot password?")</a>
                </div>
                
                <button type="submit" class="btn-submit">
                    @(isTurkish ? "Giri≈ü Yap" : "Sign In")
                </button>
            </form>
            
            <div class="form-footer">
                <p>
                    @(isTurkish ? "Hesabƒ±nƒ±z yok mu?" : "Don't have an account?")
                    <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                        @(isTurkish ? "√úcretsiz kayƒ±t olun" : "Sign up for free")
                    </a>
                </p>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
