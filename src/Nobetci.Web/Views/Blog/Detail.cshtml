@using Nobetci.Web.Controllers
@using Nobetci.Web.Data.Entities
@model BlogDetailViewModel
@{
    var isTurkish = Model.IsTurkish;
    var post = Model.Post;
    var title = post.GetTitle(isTurkish);
    var content = post.GetContent(isTurkish);
    var keywords = post.GetKeywords(isTurkish);
    ViewData["Title"] = title;
    var paragraphs = content
        .Split('\n', StringSplitOptions.RemoveEmptyEntries)
        .Where(p => !p.TrimStart().StartsWith("SEO", StringComparison.OrdinalIgnoreCase)
                 && !p.Contains("SEO kelimeleri", StringComparison.OrdinalIgnoreCase)
                 && !p.Contains("SEO keywords", StringComparison.OrdinalIgnoreCase))
        .ToList();
}

<section class="blog-detail">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <p class="blog-date">@post.PublishedAt.ToString("dd MMM yyyy")</p>
                <h1 class="blog-detail-title">@title</h1>
                <div class="blog-tags mb-3">
                    @foreach (var tag in keywords.Take(4))
                    {
                        <span class="blog-tag">@tag</span>
                    }
                </div>
                <div class="blog-content">
                    @{
                        // Check if content has HTML tags (new style) or plain text (old style)
                        var hasHtmlTags = content.Contains("<h2>") || content.Contains("<ul>") || content.Contains("<div");
                    }
                    @if (hasHtmlTags)
                    {
                        <!-- New style: Content with HTML formatting -->
                        @Html.Raw(content)
                    }
                    else
                    {
                        <!-- Old style: Plain text paragraphs -->
                        var midPoint = paragraphs.Count / 2;
                        var index = 0;
                        foreach (var paragraph in paragraphs)
                        {
                            <p>@paragraph.Trim()</p>
                            index++;
                            if (index == midPoint)
                            {
                                <!-- Mid-article CTA -->
                                <div class="blog-cta blog-cta-inline">
                                    <div class="cta-icon">üí°</div>
                                    <div class="cta-content">
                                        <h4>@(isTurkish ? "Geldimmi ile N√∂bet Planlamayƒ± Deneyin" : "Try Shift Planning with Geldimmi")</h4>
                                        <p>@(isTurkish ? "√úcretsiz hesap olu≈üturun, hemen kullanmaya ba≈ülayƒ±n." : "Create a free account and start using right away.")</p>
                                        <a href="https://geldimmi.com/App" class="cta-btn cta-btn-primary" target="_blank">
                                            @(isTurkish ? "üöÄ Hemen Dene" : "üöÄ Try Now")
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>

                <!-- End-of-article CTA Box -->
                <div class="blog-cta blog-cta-box">
                    <div class="cta-box-content">
                        <div class="cta-box-icon">‚ö°</div>
                        <h3>@(isTurkish ? "N√∂bet Planlamasƒ±nƒ± Kolayla≈ütƒ±rƒ±n" : "Simplify Your Shift Planning")</h3>
                        <p>@(isTurkish ? "Geldimmi ile otomatik n√∂bet √ßizelgesi, adil daƒüƒ±tƒ±m ve puantaj takibi. Hastaneler ve i≈ületmeler i√ßin tasarlandƒ±." : "Automatic shift scheduling, fair distribution, and timesheet tracking with Geldimmi. Designed for hospitals and businesses.")</p>
                        <div class="cta-box-features">
                            <span>‚úì @(isTurkish ? "√úcretsiz ba≈ülangƒ±√ß" : "Free to start")</span>
                            <span>‚úì @(isTurkish ? "10 personele kadar" : "Up to 10 staff")</span>
                            <span>‚úì @(isTurkish ? "Kredi kartƒ± gerekmez" : "No credit card")</span>
                        </div>
                        <div class="cta-box-buttons">
                            <a href="https://geldimmi.com/Account/Login" class="cta-btn cta-btn-primary" target="_blank">
                                @(isTurkish ? "üéØ √úcretsiz Kayƒ±t Ol" : "üéØ Sign Up Free")
                            </a>
                            <a href="https://geldimmi.com/App" class="cta-btn cta-btn-secondary" target="_blank">
                                @(isTurkish ? "üëÄ Demo ƒ∞ncele" : "üëÄ View Demo")
                            </a>
                        </div>
                    </div>
                </div>

                <div class="blog-back mt-4">
                    <a asp-controller="Blog" asp-action="Index" class="blog-readmore">
                        @(isTurkish ? "‚Üê T√ºm yazƒ±lara d√∂n" : "‚Üê Back to all posts")
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
