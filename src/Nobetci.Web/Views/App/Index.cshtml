                <span>@(isTurkish ? "Ertesi G√ºne Sarkan" : "Overnight")</span>
            </div>
            <div class="legend-item">
                <span class="legend-icon">‚Üì</span>
                <span>@(isTurkish ? "√ñnceki G√ºnden Devam" : "Continues from Previous")</span>
            </div>
        </div>
    </main>
