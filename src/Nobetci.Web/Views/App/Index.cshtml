    function applyEmployeeTotals(employeeId, totals) {
        if (!totals) return;
        
        const row = document.querySelector(`tr[data-employee-id="${employeeId}"]`);
        if (!row) return;
        
        const totalCell = row.querySelector('.col-total .total-cell');
        if (!totalCell) return;
        
